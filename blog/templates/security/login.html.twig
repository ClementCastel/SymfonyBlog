{% extends 'base.html.twig' %}

{% block title "Login" %}

{% block stylesheets %}

<link href="{{ asset('css/floating-labels.css') }}" rel="stylesheet">

{% endblock %}

{% block body %}
    <form class="form-signin" action="{{ path('login') }}" method="post">
      <div class="text-center mb-4">
        <h1 class="h3 mb-3 font-weight-normal">Login</h1>
      </div>

      {% if error %}

      <div class="text-center mb-4">
        <div class="alert alert-dismissible alert-danger">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <p>{{ error.messageKey | trans(error.messagedata, 'security') }}</p>
        </div>
      </div>

      {% endif %}

      <div class="form-label-group">
        <input name="_username" value="{{ last_username }}" type="text" id="inputEmail" class="form-control" placeholder="Username" required="" autofocus="" style="height: auto;">
        <label for="inputEmail">Username</label>
      </div>

      <div class="form-label-group">
        <input name="_password" type="password" id="inputPassword" class="form-control" placeholder="Password" required="" style="height: auto;">
        <label for="inputPassword">Password</label>
      </div>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    </form>
  
{% endblock %}
